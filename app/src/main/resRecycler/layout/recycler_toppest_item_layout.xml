<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_toppest_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/common_item_margin_10dp"
        android:layout_marginStart="15dp"
        app:riv_oval="false"
        tools:src="@drawable/launcher" />

    <TextView
        android:id="@+id/tv_toppest_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/riv_toppest_item_image"
        android:textColor="#ff048f"
        android:textSize="15dp"
        tools:text="VLayout顶部吸顶条文案" />
</RelativeLayout>