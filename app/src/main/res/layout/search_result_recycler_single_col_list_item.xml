<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_search_result_single_item_layout_root"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_search_item_cover_pic"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/common_item_margin_10dp"
        android:layout_marginRight="@dimen/common_item_margin_10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        tools:background="@color/red" />
    <TextView
        android:id="@+id/tv_search_item_cover_label"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/iv_search_item_cover_pic"
        android:layout_alignRight="@+id/iv_search_item_cover_pic"
        android:layout_alignBottom="@+id/iv_search_item_cover_pic"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11dp"
        tools:text="399任选4件" />
    
    <ImageView
        android:id="@+id/search_result_single_left_top_icon"
        android:layout_width="34.5dp"
        android:layout_height="37.5dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="17.5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/search_result_single_item_title"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="21.5dp"
        android:layout_toRightOf="@+id/iv_search_item_cover_pic"
        android:layout_toLeftOf="@+id/search_result_single_item_right_top_label"
        android:textSize="14dp"
        android:textColor="#111111"
        android:letterSpacing="0.2"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="不紧绷的保湿洁面皂不紧绷的保湿洁面皂不紧绷的保湿洁面皂不紧绷的保湿洁面皂"
        />

    <TextView
        android:id="@+id/search_result_single_item_right_top_label"
        android:layout_width="32.5dp"
        android:layout_height="16dp"
        android:textSize="11dp"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/common_item_margin_10dp"
        android:layout_alignParentRight="true"
        android:letterSpacing="0.2"
        android:layout_alignBottom="@+id/search_result_single_item_title"
        android:layout_alignTop="@+id/search_result_single_item_title"
        android:gravity="center"
        tools:text="热销"
        tools:background="@color/red" />
</RelativeLayout>