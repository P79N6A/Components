<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_analysis_recycler_list_delete_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_analysis_bottom_container"/>

    <LinearLayout
        android:id="@+id/ll_analysis_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_analysis_recycler_list_delete_group"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="0.5"
        android:text="分组"
        android:gravity="center"/>


    <TextView
        android:id="@+id/tv_analysis_recycler_list_delete_del"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="0.5"
        android:text="删除"
        android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>