<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#ff0000"
       >
       <TableLayout
           android:id="@+id/tl_scroll_horn_indicator"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toLeftOf="@+id/iv_open_close_icon"
           android:background="#0ffff0"
           />
       <ImageView
           android:id="@+id/iv_open_close_icon"
           android:src="@drawable/home_brand_desc_bottom_arrow_down_ic"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_alignParentRight="true"/>
       <FrameLayout
           android:id="@+id/fl_more_classify_content"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tl_scroll_horn_indicator"
           />
   </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>